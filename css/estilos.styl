oscuro = #111111
claro = #F4F4F4
transicion()
	-webkit-transition all 1s ease-out
	-moz-transition all 1s ease-out 
	-ms-transition all 1s ease-out 
	-o-transition all 1s ease-out 
	transition all 1s ease-out


@import url(http://fonts.googleapis.com/css?family=Open+Sans);

@font-face
	font-family 'icomoon'
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;



*
	border 0
	margin 0
	padding 0

@font-face
	font-family Open+Sans
	font-style normal
	src url(../fonts/OpenSans-Regular.ttf)

a
	font-family Open+Sans

body
	background oscuro
	font-family Open+Sans
	font-size 16px
	margin 0 auto
	padding 0



header
	background oscuro
	float left
	height 100%
	position fixed
	width 275px

	aside
		display	block
		height 100px


		ul li
			display inline-block
			list-style none
			margin 10px

			a:hover
				color oscuro
				opacity: 0.3
				transicion()

		#social
			bottom 0
			position absolute
			width 100%

			a
				color white
				font-size 2em
				font-style: normal;
				font-weight: normal;
				font-variant: normal
				text-decoration none

			.menuface:before
				font-family 'icomoon'	
				content: "\e002"

			.menutwit:before
				font-family 'icomoon'	
				content: "\e003"

			.menuplus:before
				font-family 'icomoon'	
				content: "\e001"

			.menugit:before
				font-family 'icomoon'	
				content: "\e006"
		

	h1
		margin 10px

		figure
			height 145px
			width 205px

	nav
		color white
		border-bottom thin solid gray
		border-top thin solid gray
		display block
		margin 15px
		text-align left


		ul li
			list-style none
			margin	10px 0

			.menu
				color white
				font-family Open+Sans
				font-weight bold
				text-decoration none

				&:hover
					color lightgray			
					transicion()

			.menu:before
				font-family 'icomoon'
				content "\e005"

section
	background white
	margin 0 auto
	padding 0
	text-align center

	width 1010px

#content
	display inline-block
	float right
	position relative
	text-align left
	vertical-align top
	width 735px


	a
		color oscuro
		font-size 0.8em
		text-decoration none
					

	h2
		margin 10px 20px

	footer
		display block
		margin 0 auto
		text-align center

		ul li
			display inline-block
			vertical-align top

			
			a
				text-decoration none

	.section1
		background white
		clear both
		display block
		float left
		margin 0 0 10px 0 

		h3, p
			margin 10px 20px
			text-align justify

		p
			color gray
			font-size 13px


	.section2
		background white
		display inline-block
		margin 5px
		vertical-align top
		width 355px

		img
			width 100%

		h3, p, span
			margin 10px 20px
			text-align justify

		p
			color gray
			font-size 13px


@media screen and (max-width: 480px)

	header
		background red








